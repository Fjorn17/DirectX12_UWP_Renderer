<Window x:Class="Mythforge.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mythforge" Height="600" Width="800">
    <Grid>
        <!-- Definición de filas para el layout general -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <!-- Renderizador en la parte superior -->
            <RowDefinition Height="5" />
            <!-- Espacio del GridSplitter -->
            <RowDefinition Height="2*" />
            <!-- Terminal de depuración en la parte inferior -->
        </Grid.RowDefinitions>

        <!-- Zona del renderer -->
        <ContentControl Name="rendererContainer" Grid.Row="0" Background="Gray" />

        <!-- Splitter para redimensionar las zonas -->
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="DarkGray"/>

        <!-- Terminal de depuración -->
        <RichTextBox Name="debugTerminal"
                     Grid.Row="2"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     Background="Black"
                     Foreground="White"
                     FontFamily="Consolas"
                     FontSize="12"
                     Margin="5" />
    </Grid>
</Window>
